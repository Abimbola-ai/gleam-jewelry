  <body>
    <header><%- include('./partials/_header2') %></header>
    <body>
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <div class="row">
              <div class="col-md-12 mb-3">
                <img src="images/products/necklace/bold.png" alt="Thumbnail 1" class="img-fluid thumbnail">
              </div>
              <div class="col-md-12 mb-3">
                <img src="images/products/necklace/bold.png" alt="Thumbnail 2" class="img-fluid thumbnail">
              </div>
              <div class="col-md-12 mb-3">
                <img src="images/products/necklace/bold.png" alt="Thumbnail 3" class="img-fluid thumbnail">
              </div>
            </div>
          </div>
          <div class="col-md-9">
            <!-- <div class="row"> -->
              <div>
                <img src="images/products/necklace/bold.png" alt="Product Image" class="img-fluid">
              </div>
              <div>
                <h1 class="product-title">Product Name</h1>
                <div class="product-rating row">
                  <!-- Use your own logic to display the product rating stars -->
                  
                  <div class="col-md-12 ">
                    <span class="star-value">4.6</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <span class="ratings-count" style="color: #000;">867 ratings</span>
                  </div>
                </div>
                <p class="customer-answers">3 answered questions</p>
                <hr>
                <p class="product-price">$650</p>
                <p class="exchange">FREE Exchange</p>
                <p class="delivery">Select Delivery Location</p>
                <p class="stock-option">In Stock</p>
                <div class="row mb-3">
                  <div class="col-md-3 quantity">
                    <label for="quantity">Quantity:</label>
                  </div>
                  <div class="col-md-9 mb-3">
                    <select class=" select-option text-start justify-content-start" id="quantity" name="quantity" class="form-control mb-3">
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5</option>
                    </select>
                  </div>
                </div>
           
                <div class="d-flex gap-3">
                  <button class=" add-to-cart btn mb-2 text-uppercase" style="background: #D9D9D9; color: #000;">Add to Cart</button>
                  <button class="btn  mb-2 text-uppercase" style="background: #985B42;border: 3px solid #D9D9D9; color: #FFF" ;>Buy it Now</button>
                </div>
                
                  <!-- Add product details text here -->
                  <div class="product-details-text">
                  <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. ...</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    
