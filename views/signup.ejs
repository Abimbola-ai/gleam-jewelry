      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
    <!-- <script src="js/index.js"></script> -->
    <!-- <script src="https://npmcdn.com/flickity@2/dist/flickity.pkgd.js"></script> -->
    <script src="https://use.fontawesome.com/releases/v5.2.0/js/all.js"></script>

    <!--fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Serif:wght@400;700;800&family=Poppins:wght@300;400;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

    <!-- css -->
    <link rel="stylesheet" href="css/signin.css" />


    <!--Script for Font awesome icons-->
    <!-- iconify -->
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>

  </head>

    <!-- importing header and footer templates -->
    <!-- <script>
      $(function () {
        $('#header').load('templates/header.html');
        $('#footer').load('templates/footer.html');
      });
    </script> -->
  </head>
  <body>
    <!-- <div id="header"></div> -->
   
    <!--Beginning of main/body-->

    <div>
      <img
        class="img-fluid col-md-12"
        src="./images/homepage/homebanner.png"
        alt="image of lady with multiple jewelry"
      />
    </div>
    <div class="signin-wrapper">
      <div class="sign-in">
        
        <form id="signupForm" action="/signup" method="POST">
          <a href="/" class="signup-icon"
            ><iconify-icon icon="bi:x" width="50"
            height="50"></iconify-icon>
            <span class="hover-text">Click to cancel</span>
          </a>
          <h3>Create an account</h3>
          <div class="name-section">
            <input
              class="mx-3"
              type="text"
              placeholder="First name"
              name="first_name"
              required
            />
            <input
              type="text"
              placeholder="Last name"
              name="last_name"
              required
            />
          </div>
          <div>
            <!-- <select class="mx-3" name="countryCode" id="countryCode">
              <option value="+1">+1</option>
            </select> -->
            <!-- <input
              type="phone"
              id="phoneNumber"
              placeholder="Phone number (optional)"
            /> -->
          </div>
          <input type="email" placeholder="Enter email" name="email" required />
          <div class="password-container">
            <input
            type="password"
            id="password"
            placeholder="Create password"
            name="password"
            required
          />
            <!-- <i class="far fa-eye" id="togglePassword" style="margin-left: -30px; cursor: pointer; color: #be8169;"></i> -->
            <i id="visibilityBtn" style="margin-left: -45px; cursor: pointer; color: #be8169;"><span id="icon"class="material-symbols-outlined">
              visibility
              </span></i>
          </div>
          <div class="password-container">
            <input
            type="password"
            id="confirmPassword"
            placeholder="Confirm password"
            name="confirm_password"
            required
          />
          <i id="visibilityBtn2" style="margin-left: -45px; cursor: pointer; color: #be8169;"><span id="icon2" class="material-symbols-outlined">
            visibility
            </span></i>
          </div>
          
          <input class="submit" type="submit" value="REGISTER" />
          <p class="create-acct">
            Already a member?<a href="/signin">Sign In.</a>
          </p>
        </form>
      </div>
    </div>

    <!--end of main/body-->
  
   
    <script src="./js/password.js"></script>
  </body>
</html>
