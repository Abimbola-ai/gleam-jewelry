<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gleam Jewelry</title>
    
      <!-- Bootstrap CSS & JS -->
      <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
        crossorigin="anonymous"
      />
      <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"
      ></script>
      <!-- <script src="js/index.js"></script> -->
      <!-- <script src="https://npmcdn.com/flickity@2/dist/flickity.pkgd.js"></script> -->
      <script src="https://use.fontawesome.com/releases/v5.2.0/js/all.js"></script>

      <!--fonts-->
      <link rel="preconnect" href="https://fonts.googleapis.com" />
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
      <link
        href="https://fonts.googleapis.com/css2?family=Noto+Serif:wght@400;700;800&family=Poppins:wght@300;400;600;700&display=swap"
        rel="stylesheet"
      />
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"
      />

      <!-- css -->
      <link rel="stylesheet" type="text/css" href="/css/shipping.css" />

      <!--Script for Font awesome icons-->
      <!-- iconify -->
      <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
  </head>

    <body class="d-flex align-items-center justify-content-center min-vh-100">
      <div class="container d-flex justify-content-center">
        <div class="d-flex row col-10">
          <div id="shipping-info" class="col p-5">
            

            <p class="my-4">Enter Shipping Address</p>

            <form action="" id="shipping-form">
            <!-- <form action="" method="post"> -->
              <div class="d-flex justify-content-between">
                <input
                  type="text"
                  placeholder="First name"
                  class="shipping-details"
                />
                <input
                  type="text"
                  placeholder="Last name"
                  class="shipping-details"
                />
              </div>
              <div class="d-flex justify-content-between">
                <input
                  type="text"
                  placeholder="Address 1"
                  class="shipping-details"
                />
                <input
                  type="text"
                  placeholder="Address 2 (optional)"
                  class="shipping-details"
                />
              </div>
              <div class="d-flex justify-content-between">
                <input
                  type="text"
                  placeholder="City"
                  class="shipping-details"
                />
                <input
                  type="text"
                  placeholder="Province"
                  class="shipping-details"
                />
              </div>
              <div class="d-flex justify-content-between">
                <input
                  type="text"
                  placeholder="Phone Number"
                  class="shipping-details"
                />
                <input
                  type="text"
                  placeholder="Email Address"
                  class="shipping-details"
                />
              </div>
              <div class="d-flex justify-content-end">
                <small>Enter email address to receive order</small>
              </div>

              <div>
                <input type="checkbox" id="use-as-billing" name="use as billing" />
                <label for="use as billing">Use shipping information as billing information</label>
              </div>

              <div class="d-flex justify-content-center">
                <!-- if 'use as billing' is checked, display continue to payment button   -->
                <a href="/payment">
                  <button id="continue-to-payment-btn">CONTINUE TO PAYMENT</button>
                </a>

                 <!-- if 'use as billing' is not checked, display continue to billing informstion button   -->
                <a href="/billing_info">
                  <button id="continue-to-billing-btn">CONTINUE TO BILLING INFORMATION</button>
                </a>
              </div>
            </form>
          </div>

          <div id="order-summary" class="col">
            <div class="d-flex justify-content-end">
              <a href="/" class="cancel"
                ><iconify-icon
                  icon="bi:x"
                  width="50"
                  height="50"
                ></iconify-icon>
                <!-- <span class="hover-text">Click to cancel</span> -->
              </a>
            </div>

            <div class="container px-5">
            <h4>Order Summary</h4>
            <hr />

            <!-- Display the subtotal -->
            <div class="d-flex justify-content-between">
              <p>Order Number:</p>
              <p id="order-number"></p>
            </div>

            <div class="d-flex justify-content-between">
              <p>Subtotal:</p>
              <p id="subtotal"></p>
            </div>

            <div class="d-flex justify-content-between">
              <p>Shipping Fee:</p>
              <p>$20.00</p>
            </div>
            <hr />
            <!-- Display the tax -->

            <p>Tax Included:</p>

            <div class="d-flex justify-content-between">
              <p>HST:</p>
              <p id="tax"></p>
            </div>

            <div class="d-flex justify-content-between">
              <p>Grand Total: </p>
              <p id="grand-total"></p>
            </div>

            <input type="text" placeholder="Apply Promo Code" id="promo-code">

          
            <div class="my-5">
              <p>
                <span>
                  <iconify-icon
                    icon="uis:padlock"
                    style="color: #dfbab1"
                  ></iconify-icon>
                </span>
                Payment Security
              </p>
              <small>
                <strong>GLEAM JEWELRY </strong> is committed to protecting your
                payment information and shares your credit card information with
                our payment service providers who agreed to safe guard your
                information</small
              >
            </div>
          </div>
        </div>
      </div>

      <script src="js/shipping.js"></script>
      <script src="js/shared.js"></script>
      <script>
        document.getElementById('order-number').textContent = orderNumber;
      </script>
    
  </body>
</html>

